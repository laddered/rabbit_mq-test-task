<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}RabbitMQ Demo{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
</head>
<body>
    <div class="container mt-4">
        {% if app.user %}
        <nav class="mb-3 d-flex align-items-center justify-content-between">
            <div>
                <a class="link-warm" href="/dashboard">Dashboard</a>
            </div>
            <div class="d-flex align-items-center" style="gap: 0.5rem;">
                <span class="text-muted">{{ app.user.email }}</span>
                <form method="post" action="/logout" style="display:inline;">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                    <button type="submit" class="btn btn-link" title="Выйти" style="vertical-align: middle; padding: 0 0.5rem;">
                        <img src="/images/logout.svg" alt="Выйти" width="20" height="20" style="vertical-align: middle; display: inline-block; margin-bottom: 2px;" />
                    </button>
                </form>
            </div>
        </nav>
        <hr>
        {% endif %}
        {% block body %}{% endblock %}
    </div>
    <footer class="footer mt-auto py-3">
        <div class="container text-center text-muted">
            © {{ "now"|date("Y") }} RabbitMQ Demo
        </div>
    </footer>
    {{ encore_entry_script_tags('app') }}
</body>
</html>
