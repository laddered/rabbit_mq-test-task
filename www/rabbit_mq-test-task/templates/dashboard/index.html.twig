{% extends 'base.html.twig' %}
{% block title %}Dashboard{% endblock %}
{% block body %}
<div class="card mb-4">
    <div class="card-body">
        <h1 class="card-title">Dashboard</h1>
        <p class="card-text">Добро пожаловать в панель управления!</p>
        {% if app.user %}
            <form method="post" class="mt-4">
                <button type="submit" class="btn btn-success">Отправить сообщение в RabbitMQ</button>
            </form>
            {% for message in app.flashes('success') %}
                <div id="rabbitmq-alert" class="alert alert-success mt-3" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %} 